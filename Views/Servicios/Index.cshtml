@model IEnumerable<SpaWebApp.Models.Comentarios>

@{
    ViewData["Title"] = "Servicios";
}

<!-- Estilo CSS local -->
<style>
    .service-img {
        width: 100%;
        height: 250px;
        object-fit: cover;
    }

    .service-list {
        list-style-type: none;
        padding-left: 0;
    }

        .service-list li {
            margin-bottom: 5px;
            position: relative;
            padding-left: 20px;
        }

            .service-list li::before {
                content: "•";
                color: #ff6f61; /* Color rosado del círculo */
                font-size: 20px;
                position: absolute;
                left: 0;
                top: 0;
            }
</style>

<div class="container mt-5">
    <h1 class="text-center">Nuestros Servicios</h1>
    <div class="row mt-4">
        <!-- Masajes -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="~/images/masajes.jpg" class="card-img-top service-img" alt="Masajes" />
                <div class="card-body">
                    <h5 class="card-title">Masajes</h5>
                    <ul class="service-list">
                        <li>Anti-stress</li>
                        <li>Descontracturantes</li>
                        <li>Masajes con piedras calientes</li>
                        <li>Circulatorios</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Belleza -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="~/images/belleza.jpg" class="card-img-top service-img" alt="Belleza" />
                <div class="card-body">
                    <h5 class="card-title">Belleza</h5>
                    <ul class="service-list">
                        <li>Lifting de pestaña</li>
                        <li>Depilación facial</li>
                        <li>Belleza de manos y pies</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Tratamientos Faciales -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="~/images/tratamientos-faciales.jpg" class="card-img-top service-img" alt="Tratamientos Faciales" />
                <div class="card-body">
                    <h5 class="card-title">Tratamientos Faciales</h5>
                    <ul class="service-list">
                        <li>Punta de Diamante: Microexfoliación</li>
                        <li>Limpieza profunda + Hidratación</li>
                        <li>Crio frecuencia facial: produce el “SHOCK TÉRMICO” logrando resultados instantáneos de efecto lifting</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Tratamientos Corporales -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="~/images/tratamientos-corporales.jpg" class="card-img-top service-img" alt="Tratamientos Corporales" />
                <div class="card-body">
                    <h5 class="card-title">Tratamientos Corporales</h5>
                    <ul class="service-list">
                        <li>VelaSlim: Reducción de la circunferencia corporal y la celulitis</li>
                        <li>DermoHealth: moviliza los distintos tejidos de la piel y estimula la microcirculación, generando un drenaje linfático</li>
                        <li>Criofrecuencia: produce un efecto de lifting instantáneo</li>
                        <li>Ultracavitación: Técnica reductora</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <hr />
    <h2>Comentarios de Clientes</h2>
    <div>
        @if (Model != null && Model.Any())
        {
            <ul class="list-group">
                @foreach (var comentario in Model)
                {
                    <li class="list-group-item">
                        <strong>@comentario.Nombre</strong> (@comentario.FechaComentario.ToString("dd/MM/yyyy")):
                        <p>@comentario.Comentario</p>

                        @if (User.IsInRole("Administrador"))
                        {
                            <form asp-controller="Comentarios" asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="comentarioId" value="@comentario.ComentarioID" />
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        }
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No hay comentarios aún. Sé el primero en dejar uno.</p>
        }
    </div>

    <hr />
    <h3>Deja tu comentario</h3>
    <form asp-controller="Comentarios" asp-action="Create" method="post">
        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" id="Nombre" name="Nombre" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Comentario">Comentario</label>
            <textarea id="Comentario" name="Comentario" class="form-control" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Enviar comentario</button>
    </form>
</div>
